    "error_text": {
      "font": {
        "name": "SimSun",
        "size": 22,
        "color": "FF0000",
        "bold": false,
        "italic": true
      },
      "alignment": "center",
      "spacing": {
        "before": 100,
        "after": 100,
        "line": 1.15
      },
      "indent": {
        "firstLine": 0,
        "left": 0,
        "right": 0
      }
    },

    "list_item": {
      "font": {
        "name": "SimSun",
        "size": 24,
        "color": "000000",
        "bold": false,
        "italic": false
      },
      "alignment": "justified",
      "spacing": {
        "before": 0,
        "after": 100,
        "line": 1.5
      },
      "indent": {
        "firstLine": 240,
        "left": 480,
        "right": 0
      }
    }
  },

  "presets": {
    "academic": {
      "description": "学术论文标准格式",
      "page": {
        "margin": {
          "top": 1440,
          "bottom": 1440,
          "left": 1800,
          "right": 1800
        },
        "size": "A4"
      },
      "defaultStyles": {
        "title": "title",
        "author": "author",
        "chapter": "chapter_title",
        "section": "section_title",
        "subsection": "subsection_title",
        "text": "body_text",
        "figure": "figure_caption",
        "table": "table_caption",
        "tableHeader": "table_header",
        "tableCell": "table_cell",
        "error": "error_text"
      }
    },

    "simple": {
      "description": "简单格式，较小字体和间距",
      "page": {
        "margin": {
          "top": 1440,
          "bottom": 1440,
          "left": 1440,
          "right": 1440
        },
        "size": "A4"
      },
      "defaultStyles": {
        "title": "title",
        "author": "author",
        "chapter": "section_title",
        "section": "subsection_title",
        "subsection": "sub_subsection_title",
        "text": "default",
        "figure": "figure_caption",
        "table": "table_caption",
        "tableHeader": "table_header",
        "tableCell": "table_cell",
        "error": "error_text"
      }
    }
  },

  "usage": {
    "description": "在content.run文件中，可以在节点上添加docx_type字段来指定样式",
    "examples": {
      "title_with_custom_style": {
        "title": "第一章 系统概述",
        "docx_type": "chapter_title",
        "text": "本章介绍系统的整体架构..."
      },
      "text_with_custom_style": {
        "title": "1.1 系统需求分析",
        "docx_type": "section_title",
        "text": "通过调研分析，确定系统需求如下...",
        "docx_type_text": "body_text"
      },
      "figure_with_custom_style": {
        "figures": [{
          "label": "图 1-1 系统架构图",
          "docx_type": "figure_caption",
          "imagePath": "./paper/exports/uml/Fig-1-1__system-architecture.png"
        }]
      },
      "table_with_custom_style": {
        "tables": [{
          "label": "表 1-1 功能需求汇总",
          "docx_type": "table_caption",
          "docx_type_header": "table_header",
          "docx_type_cell": "table_cell",
          "dataPath": "./paper/exports/tables/Tab-1-1__requirements.json"
        }]
      }
    }
  }
}
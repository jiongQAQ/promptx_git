        "name": "SimSun",
        "size": 20,
        "color": "000000",
        "bold": false,
        "italic": false
      },
      "alignment": "left",
      "spacing": {
        "before": 0,
        "after": 0,
        "line": 1.15
      },
      "indent": {
        "firstLine": 0,
        "left": 60,
        "right": 60
      },
      "background": "FFFFFF"

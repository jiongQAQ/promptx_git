        "italic": false
      },
      "alignment": "left",
      "spacing": {
        "before": 200,
        "after": 150,
        "line": 1.5
      },
      "indent": {
        "firstLine": 0,
        "left": 0,
        "right": 0
      },
      "headingLevel": 3
    },

    "sub_subsection_title": {
      "font": {
        "name": "SimHei",
        "size": 26,
        "color": "000000",
        "bold": true,
        "italic": false
      },
      "alignment": "left",
      "spacing": {
        "before": 150,
        "after": 100,
        "line": 1.5
      },
      "indent": {
        "firstLine": 0,
        "left": 0,
        "right": 0
      },
      "headingLevel": 4
    },

    "body_text": {
      "font": {
        "name": "SimSun",
        "size": 24,
        "color": "000000",
        "bold": false,
        "italic": false
      },
      "alignment": "justified",
      "spacing": {
        "before": 0,
        "after": 0,
        "line": 1.5
      },
      "indent": {
        "firstLine": 480,
        "left": 0,
        "right": 0
      }
    },

    "figure_caption": {
      "font": {
        "name": "SimSun",
        "size": 22,
        "color": "000000",
        "bold": false,
        "italic": false
      },
      "alignment": "center",
